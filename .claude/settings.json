{
  "permissions": {
    "allow": [
      "Bash(pnpm run dev:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm run test:*)",
      "Bash(pnpm run typecheck:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["pnpm run dev:*", "pnpm test:*"]
  }
}
